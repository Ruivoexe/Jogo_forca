<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acertos: 0"
        android:textSize="32sp"
        android:textColor="@color/contraste"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvErros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erros: 0"
        android:textSize="32sp"
        android:textColor="@color/contraste"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Ranking"
        android:textSize="20sp"
        android:padding="12dp"
        android:backgroundTint="@color/contraste"
        android:textColor="@color/fundo"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="20sp"
        android:padding="12dp"
        android:backgroundTint="@color/contraste"
        android:textColor="@color/fundo"/>

</LinearLayout>
