<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:padding="8dp"
        android:textColor="@color/fundo"
        android:backgroundTint="@color/contraste"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cabeca"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/head"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/corpo"
        android:layout_width="20dp"
        android:layout_height="140dp"
        android:src="@drawable/body"
        app:layout_constraintTop_toBottomOf="@id/cabeca"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/braco_esq"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:src="@drawable/arm"
        android:rotation="330"
        app:layout_constraintTop_toTopOf="@id/corpo"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/corpo"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/braco_dir"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:src="@drawable/arm"
        android:rotation="30"
        app:layout_constraintTop_toTopOf="@id/corpo"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/corpo"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/perna_esq"
        android:layout_width="25dp"
        android:layout_height="110dp"
        android:src="@drawable/leg"
        android:rotation="30"
        app:layout_constraintTop_toBottomOf="@id/corpo"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/corpo"
        android:layout_marginEnd="25dp" />

    <ImageView
        android:id="@+id/perna_dir"
        android:layout_width="25dp"
        android:layout_height="110dp"
        android:src="@drawable/leg"
        android:rotation="330"
        app:layout_constraintTop_toBottomOf="@id/corpo"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/corpo"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/tv_palavra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quest5"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/perna_dir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/lin_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_palavra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alan Turing"
            android:textColor="@color/fundo"
            android:backgroundTint="@color/contraste"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quentin Tarantino"
            android:textColor="@color/fundo"
            android:backgroundTint="@color/contraste"
            android:textSize="10sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stalin"
            android:textColor="@color/fundo"
            android:backgroundTint="@color/contraste"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
